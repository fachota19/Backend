<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="gamesPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.frc.backend.gamesapp.modelo.Genero</class>
        <class>com.frc.backend.gamesapp.modelo.Plataforma</class>
        <class>com.frc.backend.gamesapp.modelo.Desarrollador</class>
        <class>com.frc.backend.gamesapp.modelo.Juego</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:./data/gamesdb;AUTO_SERVER=true"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- ðŸš€ Generar automÃ¡ticamente las tablas -->
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>

            <!-- Opcionales para debug -->
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.highlight_sql" value="false"/>
            <property name="hibernate.use_sql_comments" value="false"/>
            
        </properties>
    </persistence-unit>
</persistence>